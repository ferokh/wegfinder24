<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".EingabeActivity">


    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginBottom="5dp"/>
   <!--<EditText
        android:id="@+id/edtStartEnter"
        android:layout_height="570dp"
        android:clickable="true"
        android:focusable="true"/>-->

    <ImageButton
        android:id="@+id/btnGPSstart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/mapView"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_round"/>

    <!--<ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/btn_shape_gradient"
        android:padding="8dp"
        android:scaleType="center"
        android:src="@drawable/btn_drawable_selector" />-->

   <EditText
        android:id="@+id/edtStartEnter"
        android:layout_below="@id/mapView"
        android:layout_toRightOf="@id/btnGPSstart"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
       android:background="@drawable/edt_shape"
        android:hint="Start\nBreitengrad"
        android:textColorHint="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:numeric="decimal"
        tools:ignore="Deprecated"
        android:textColor="@color/black" />
    <!--android:text="49.012607"-->
    <EditText
        android:id="@+id/edtStartEnterLong"
        android:layout_below="@id/mapView"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/edtStartEnter"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edt_shape"
        android:hint="Start\nLängengrad"
        android:textColorHint="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:numeric="decimal"
        tools:ignore="Deprecated"
        android:textColor="@color/black"/>
    <!--        android:text="8.385613"-->

    <Button
        android:id="@+id/btnStartAuswahl"
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_below="@id/mapView"
        android:layout_toRightOf="@id/btnGPSstart"
        android:background="@color/Transparent"
        />

    <ImageButton
        android:id="@+id/btnGPSziel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/btnGPSstart"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_round_grey"
        />

    <Button
        android:id="@+id/btnZielAuswahl"
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/btnStartAuswahl"
        android:layout_toRightOf="@id/btnGPSstart"
        android:background="@color/Transparent"
        />

    <EditText
        android:id="@+id/edtZielEnter"
        android:layout_below="@id/edtStartEnter"
        android:layout_toRightOf="@id/btnGPSziel"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:hint="Ziel\nBreitengrad"
        android:textColorHint="@color/grey"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:numeric="decimal"
        tools:ignore="Deprecated"
        android:textColor="@color/black"
        android:background="@drawable/edt_shape"/>
    <!--        android:text="49.004462"-->

    <EditText
        android:id="@+id/edtZielEnterLong"
        android:layout_below="@id/edtStartEnterLong"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/edtStartEnter"
        android:layout_marginLeft="5dp"
        android:hint="Ziel\nLängengrad"
        android:textColorHint="@color/grey"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:numeric="decimal"
        tools:ignore="Deprecated"
        android:textColor="@color/black"
        android:background="@drawable/edt_shape"/>
    <!--android:text="8.441755"-->

    <ImageButton
        android:id="@+id/btnArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/edtStartEnter"
        android:layout_toRightOf="@id/edtZielEnterLong"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_baseline_start_30"
        android:background="@drawable/btn_round"/>

</RelativeLayout>