<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_25dark"
    tools:context=".EingabeActivity">


    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="570dp" />
    <TextView
        android:id="@+id/StartEnter"
        android:layout_below="@id/mapView"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"

        android:hint="Startpunkt wählen"
        android:textColorHint="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/btnGPS"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/mapView"
        android:layout_alignRight="@id/StartEnter"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/alternative"
        android:src="@drawable/ic_baseline_gps_fixed_40"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/DestinationEnter"
        android:layout_below="@id/StartEnter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:background="@color/white"

        android:hint="Zielpunkt wählen"
        android:textColorHint="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/btnArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/StartEnter"
        android:layout_alignRight="@id/DestinationEnter"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/alternative"
        android:src="@drawable/ic_baseline_arrow_forward_40"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>